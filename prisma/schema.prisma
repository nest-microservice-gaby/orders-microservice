generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id             String        @id @default(uuid())
  totalAmount    Float
  totalItems     Int
  status         OrderStatus
  paid           Boolean       @default(false)
  paidAt         DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  stripeChargeId String?
  OrderItem      OrderItems[]
  OrderReceipt   OrderReceipt?
}

model OrderItems {
  id        String @id @default(uuid())
  productId Int
  quantity  Int
  price     Float
  orderId   String
  order     Order  @relation(fields: [orderId], references: [id])
}

model OrderReceipt {
  id         String   @id
  orderId    String   @unique
  receiptUrl String
  createdAt  DateTime @default(now())
  updatedAt  DateTime
  Order      Order    @relation(fields: [orderId], references: [id])
}

enum OrderStatus {
  PENDING
  DELIVERED
  CANCELLED
  PROCESSING
  PAID
}
